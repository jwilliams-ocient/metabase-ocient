<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="%d{ISO8601} [%level] %logger{2} :: %message%n%throwable"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="metabase" level="TRACE"/>
    <Logger name="metabase-enterprise" level="TRACE"/>
    <Logger name="metabase.plugins" level="TRACE"/>
    <Logger name="liquibase" level="TRACE"/>

    <Root level="TRACE">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
